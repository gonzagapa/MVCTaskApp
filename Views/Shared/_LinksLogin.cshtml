@using Microsoft.AspNetCore.Identity; 
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <!-- todo: Comprobar si puede hacer con tag a-->
            <form asp-action="logout" asp-controller="usuarios" class="form-inline">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registro" asp-controller="Usuarios">
                Registro
            </a>
        </li>
        <li class="nav-item"> 
            <a class="nav-link text-dark" asp-action="login" asp-controller="Usuarios">
                Login
            </a>
        </li>
    }
</ul>
