@model LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1>Login</h1>

@if(ViewData.Keys.Contains("mensaje"))
{
    <div class="alert alert-info">
        @ViewData["mensaje"]
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" type="email"  />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                <label class="form-check-label" asp-for="Recuerdame"></label>
            </div>

            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
            <a class="btn btn-success" asp-action="registro">Crear una nueva cuenta</a>
            <a class="btn btn-success" asp-action="LoginExterno" asp-route-proveedor="Google">
                Ingresar con Google
            </a>
        </form>
    </div>
</div>